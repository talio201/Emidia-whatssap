{
  "manifest_version": 3,
  "name": "WhatsApp Web Assistant",
  "version": "1.0.0",
  "description": "Assistente para WhatsApp Web com funcionalidades extras",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js", "popup.js"]
    }
  ],
  "action": {
    "default_title": "WhatsApp Web Assistant",
    "default_popup": "popup.html"
  }
}
