{
  "manifest_version": 3,
  "name": "WhatsApp Web Assistant",
  "version": "3.0.0",
  "description": "Extensão para integração com WhatsApp Web e API.",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3001/*"
  ]
}