{
  "manifest_version": 3,
  "name": "WhatsApp Web Assistant",
  "version": "3.0.0",
  "description": "Extensão para integração com WhatsApp Web e API.",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3001/*"
  ]
  ,
  "web_accessible_resources": [
    {
      "resources": ["icons/pin-32.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
